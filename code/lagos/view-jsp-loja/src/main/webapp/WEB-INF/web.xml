<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <servlet>
        <servlet-name>ServletWeb</servlet-name>
        <servlet-class>br.cefetmg.lagos.controller.loja.ServletWeb</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletWeb</servlet-name>
        <url-pattern>/servletweb</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <!-- TODO: mover o login do index.jsp para o login.jsp e remover o index.jsp do welcome-file-list -->
        <welcome-file>
            index.jsp
        </welcome-file>
        <welcome-file>
            login.jsp
        </welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>jakarta.faces.AUTOMATIC_EXTENSIONLESS_MAPPING</param-name>
        <param-value>true</param-value>
    </context-param>

    <session-config>
        <session-timeout>
            90
        </session-timeout>
    </session-config>
    <resource-ref>
        <description>JDBC Connection Pool</description>
        <res-ref-name>jdbc/lagos</res-ref-name>
        <res-type>jakarta.activation.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
